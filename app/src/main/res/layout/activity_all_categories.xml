<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllCategories"
    android:background="#FFFFFF"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize">
    <ImageView
        android:id="@+id/back_pressed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="15dp"
        android:src="@drawable/general_back_icon" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="15dp"
        android:src="@drawable/general_search_icon" />
</RelativeLayout>


        <TextView
            android:id="@+id/activity_all_categories_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categories"
            android:textSize="30sp"
            android:textAllCaps="true"
            android:padding="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/yellow"
                android:layout_margin="20dp"
                android:id="@+id/activity_all_categories_Songbirds"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Songbirds"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:padding="25dp"
                    android:textStyle="bold"
                    android:fontFamily="cursive"
                    />






            </RelativeLayout>


            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/parrot"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"

                />


        </RelativeLayout>

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardElevation="10dp"
    card_view:cardMaxElevation="12dp"
    app:cardCornerRadius="20dp"
    android:layout_margin="20dp">




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/categories_restaurant_background"
            android:id="@+id/activity_all_categories_waterbirds"
            >
            <ImageView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:src="@drawable/pelican2"
                android:layout_marginLeft="-15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Waterbirds"
                android:textSize="22sp"
                android:textColor="#ffff"
                android:layout_alignParentRight="true"
                android:padding="25dp"
                android:textStyle="bold"/>




        </RelativeLayout>

</androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/yellow"
                android:layout_margin="20dp"
                android:id="@+id/activity_all_categories_accipitriformes"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accipitriformes"
                    android:textSize="19sp"
                    android:textColor="#000000"
                    android:padding="25dp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-black"
                    />






            </RelativeLayout>


            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/eagle2"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"

                />


        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            card_view:cardElevation="10dp"
            card_view:cardMaxElevation="12dp"
            app:cardCornerRadius="20dp"
            android:layout_margin="20dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="#8A7878"
                android:id="@+id/activity_all_categories_galliformes"
                >
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="135dp"
                    android:src="@drawable/galliformes"
                    android:layout_marginLeft="-15dp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Galliformes"
                    android:textSize="22sp"
                    android:textColor="#FFFFFF"
                    android:layout_alignParentRight="true"
                    android:padding="25dp"
                    android:textStyle="bold"/>




            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>

